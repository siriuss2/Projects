@model BookViewModel

<h3>Edit @Model.Title</h3>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="custom-control-label"></label>
                <input type="text" asp-for="Title" />
            </div>
            <div class="form-group">
                <label asp-for="AuthorId" class="control-label"></label>
                <select asp-for="AuthorId" asp-items="@(new SelectList(ViewBag.Authors, "Id", "FullName"))" class="selectAuthor"></select>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl" class="custom-control-label"></label>
                <input type="text" asp-for="ImageUrl" />
            </div>
            <div class="form-group">
                <label asp-for="ISBN" class="custom-control-label"></label>
                <input type="text" asp-for="ISBN" />
            </div>
            <div class="form-group">
                <label asp-for="Synopsis" class="custom-control-label"></label>
                <textarea asp-for="Synopsis" rows="4" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="Genre" class="control-label"></label>
                <select class="form-control" asp-for="Genre" asp-items="Html.GetEnumSelectList<Genre>()"></select>
            </div>
            <div class="form-group">
                <label asp-for="PublicationDate" class="custom-control-label"></label>
                <input type="date" asp-for="PublicationDate" value="@Model.PublicationDate.ToString("yyyy-MM-dd")" />
            </div>

            <button type="submit" class="btn btn-outline-success">Save</button>
        </form>
    </div>
</div>